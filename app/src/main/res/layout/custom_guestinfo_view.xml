<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linray_parentlinary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingRight="26dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--IMG-->
            <LinearLayout
                style="@style/marginMdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_guest"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>

            <!--Award-->
            <LinearLayout
                style="@style/marginMdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewguest_info_award"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_award"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trateria Plann award." />
            </LinearLayout>


            <!--Name-->
            <LinearLayout
                style="@style/marginMdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewguest_info_guestname"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NATTAWUT PICHAIWATTNPHON" />
            </LinearLayout>

            <!--Corp-->
            <LinearLayout
                style="@style/marginMdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtw_corp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewguest_info_corp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_corp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <!--Position-->
            <LinearLayout
                style="@style/marginMdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtw_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewguest_info_position"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--AwardNo-->
                    <LinearLayout
                        style="@style/marginMdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/viewguest_info_awardno"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_awardno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="99" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--Status-->
                    <LinearLayout
                        style="@style/marginMdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/viewguest_info_status"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Absent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--SeatSection-->
            <LinearLayout
                style="@style/marginMdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--SeatRow-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/viewguest_info_seatrow"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_seatrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A" />
                </LinearLayout>
                <!--SeatNo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/viewguest_info_seatno"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_seatno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="116" />
                </LinearLayout>

            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/dismiss"-->
            <!--android:id="@+id/btn_dismiss"-->
            <!--android:layout_marginLeft="36dp"-->
            <!--android:layout_marginRight="36dp"-->
            <!--android:layout_marginBottom="16dp"/>-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </ScrollView>


</LinearLayout>